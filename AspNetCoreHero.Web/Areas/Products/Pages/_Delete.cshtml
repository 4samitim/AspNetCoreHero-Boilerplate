@using AspNetCoreHero.Web.Areas.Products.ViewModels
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ProductViewModel
<form id="create-form" method="post" asp-area="Products" asp-route-id="@Model.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this);">

    <div class="form-group row">
        <div class="col-md-9">
            <label>Do you want to Delete?</label>
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger save-button">Delete</button>
    </div>

</form>