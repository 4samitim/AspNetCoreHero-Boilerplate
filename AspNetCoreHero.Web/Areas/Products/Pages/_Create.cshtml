@{ Layout = null; }
@using AspNetCoreHero.Web.Models.Shared.Modals
@model AspNetCoreHero.Web.Areas.Products.Pages.IndexModel
<div class="modal fade" id="ProductCreateModal" tabindex="-1" role="dialog" aria-labelledby="TenantCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Pages/Shared/AdminLTE/Modals/_Header.cshtml", new HeaderViewModel("Create Products"))
            <form name="productCreateForm" role="form" class="form-horizontal" asp-area="Products" asp-page="Index" asp-route-product="@Model.createModel" asp-page-handler="CreateProduct">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">Name</label>
                        <div class="col-md-9">
                            <input required type="text" asp-for="@Model.createModel.Name" name="Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">Barcode</label>
                        <div class="col-md-9">
                            <input required type="text" asp-for="@Model.createModel.Barcode" name="Barcode" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">Description</label>
                        <div class="col-md-9">
                            <input type="text" asp-for="@Model.createModel.Description" name="Description" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Rate</label>
                        <div class="col-md-9">
                            <input required type="number" asp-for="@Model.createModel.Rate" name="Rate" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Pages/Shared/AdminLTE/Modals/_FooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
